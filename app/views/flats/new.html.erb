<div class="container text-center">
<h1>Create a new flat!</h1>

<div class="form">
        <%= simple_form_for(@flat) do |f| %>
            <% if @flat.errors.any? %>
              <div class="errors-container">
                <ul>
                  <% @flat.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :description %>
          <%= f.input :price_per_night %>
          <%= f.input :number_of_guests %>
          <%= f.button :submit, class: "btn btn-success" %>

          <% end %>
        </div>
      </div>
</div>
  <div class="text-center"><h2>
    <%= link_to "Back to list of flats", flats_path, class: "btn btn-primary" %></h2>
  </div>
</div>
